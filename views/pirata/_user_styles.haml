- unless @recipient_info.blank?
  - #p @recipient_info
  %style{:type => 'text/css'}
    :plain
      body {background-position: top left; background-repeat: #{@recipient_info['profile_background_tile'] ? 'repeat' : 'repeat-x'}; background-image: url(#{@recipient_info['profile_background_image_url']}); background-color: ##{@recipient_info['profile_background_color']};}
      #content_area #sidebar {background-color: ##{@recipient_info['profile_sidebar_fill_color']}; border-left-color: ##{@recipient_info['profile_sidebar_border_color']};}
      a {color: ##{@recipient_info['profile_link_color']};}
      #content {color: ##{@recipient_info['profile_text_color']};}