!!! Strict
%html{:xmlns => 'http://www.w3.org/1999/xhtml', :'xml:lang' => configatron.site_language, :lang => configatron.site_language}
  %head
    %title= (@title ? "#{@title} / " : '') + "#{configatron.site_name}"
    %meta{:"http-equiv" => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{:name => 'keywords', :content => configatron.meta_keywords.gsub(/\%t/, configatron.site_name)}
    %meta{:name => 'description', :content => configatron.meta_description.gsub(/\%t/, configatron.site_name)}
    %meta{:content => configatron.twitter_account_name, :name => "page-user-screen_name"}
    %link{:href => "http://a1.twimg.com/a/1258674567/images/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
    %link{:href => "http://a1.twimg.com/a/1258674567/images/twitter_57.png", :rel => "apple-touch-icon"}
    %link{:href=>'/css/screen.css', :media=>'all', :rel =>'stylesheet', :type=>'text/css'}
    %script{:type => 'text/javascript', :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.js'}
    %script{:type => 'text/javascript', :src => '/js/application.js'}

    = partial('user_styles', :cache => true)

  %body
    #container
      #header.rel
        #logo
          %a{:href => '/'}
            %img{:src => "/images/logo.png", :title => configatron.site_name}
        - if true
          #nav.nav.round.abs
            %ul
              %li
                %a{:href => '/'} Home
              %li
                %a{:href => '/'} About
        

      - unless @content_for_notice.blank?
        #notice.box.rel
          %img.bird.abs{:src => 'http://a0.twimg.com/a/1259091217/images/profile_bird.png', :title => '', :alt => ''}
          = @content_for_notice

      #content_area
        %table
          %tbody
            %tr
              %td#content.round-tl.round-bl

                - if flash[:error] || flash[:notice]
                  #flash_msgs
                    - if flash[:error]
                      %p.flash.flash_error= flash[:error]
                    - if flash[:notice]
                      %p.flash.flash_notice= flash[:notice]
              
                #content_box
                  = yield

                #content_body
                  = partial('stream', :cache => true)

              %td#sidebar.round-tr.round-br
                = partial('sidebar', :cache => true)

      #footer.nav.round
        %ul
          %li.first trollbabytroll is a <a href="http://www.fffff.at">F.A.T. Production</a> for the lulz. No rights reserved.
          %li
            %a{:href => 'http://www.github.com/gleuch/twitter-pirata'} Grab the Code.